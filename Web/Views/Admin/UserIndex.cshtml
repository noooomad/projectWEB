@model IEnumerable<BusinessLogic.DB.User>

@{
    ViewBag.Title = "AdminControls";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>AdminControls</h2>

<p>
    @Html.ActionLink("Create New", "UserCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User_Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User_Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User_Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User_Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User_FrstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User_LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User_Adres)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_FrstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Adres)
            </td>
            <td>
                @Html.ActionLink("Delete", "UserDelete", new { id = item.User_ID })
            </td>
        </tr>
    }

</table>
