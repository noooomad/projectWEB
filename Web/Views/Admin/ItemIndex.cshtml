@model IEnumerable<BusinessLogic.DB.Item>

@{
    ViewBag.Title = "AdminControls";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>AdminControls</h2>

<p>
    @Html.ActionLink("Create New", "ItemCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Item_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item_Desc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item_Image)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item_Desc)
            </td>
            <td>
                <img width="100px" height="100px" src="/Content/@item.Item_Image" alt="Alternate Text" />
            </td>
            <td>
                @Html.ActionLink("Delete", "ItemDelete", new { id = item.Item_ID })
            </td>
        </tr>
    }
</table>
